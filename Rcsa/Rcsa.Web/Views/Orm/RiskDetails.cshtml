        $(document).ready(function () {
            debugger;
            var value = $('#gfvalue').val();
            // alert(value);

            jQuery(".mGrid tbody tr").each(function () {
                debugger;
                var get_id = jQuery(this).find('input[type=hidden]').val();
                if (get_id == value) {
                    $(this).addClass("highlight");
                }
                else {
                    $(this).removeClass("highlight");
                }
            });


        })
    </script>
